<div class="container">
    <div class="row d-flex align-items-center mt-3">
      <div class="col s8">
        <span class="title">Лента новостей</span>
      </div>
      <div class="col s4">
        <div class="input-field col s12">
          <%= form_tag(root_path, method: :get) do %>
            <%= text_field_tag(:search, params[:search], class: "validate", placeholder: 'Поиск') %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
        <div class="col s8">
          <% if @news.present? %>
            <%= render @news %>
          <% else %>
            <h3 class="no-results"><%= @text %></h3>
          <% end %>
        </div>
        <div class="col s4">
          <div class="card currencyCard">
            <div class="card-content">
              <span class="card-title">Курс валют</span>
              <div class="currencyCard__content">
                  <% @currencyArray.each do |currency| %>
                    <div class="currencyCard__item currencyCard__item-mr">
                      <b class="currencyCard__title flow-text"> <%= currency.title %></b>
                      <span class="currencyCard__value"> <%= currency.value %></span>
                    </div>
                  <% end %>
              </div>
            </div>
          </div>
         </div>
        <div class="col s4">
            <div class="card currencyCard">
            <div class="card-content">
            <span class="card-title">Погода</span>
            <div class="currencyCard__content">
              <% @weatherArray.each do |currency| %>
                <div class="currencyCard__item currencyCard__item-mr">
                  <b class="currencyCard__title flow-text"> <%= currency.title %></b>
                  <span class="currencyCard__value"> <%= currency.value %></span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        </div>
    </div>
    <div class="row">
      <div class="col s12">
        <% if @news.present? %>
          <%= will_paginate @news, :previous_label => 'Предыдущий', :next_label => 'Следующий' %>
        <% end %>
      </div>
    </div>
</div>

