<div class="container">
    <div class="row d-flex align-items-center mt-3">
      <div class="col s8">
        <span class="title">Лента новостей</span>
      </div>
      <div class="col s4">
        <a class="modal-trigger  btn blue darken-1" href="#modal2">Поиск новостей</a>
      </div>
    </div>
    <div class="row">
        <div class="col s8">
            <% @news.each do |entry| %>

                  <div class="card horizontal">
                    <div class="card-image">
                      <%= image_tag(entry.imgsrc) %>
                    </div>
                    <div class="card-stacked">
                      <div class="card-content">
                        <p class="text"><%= entry.title %></p>
                      </div>
                      <div class="card-action card-action-flex">
                        <div class="card__link">
                          <%= link_to "Открыть", entry %>
                        </div>
                        <div class="card__date ">
                          <%= entry.date %>
                        </div>
                      </div>
                    </div>
                  </div>

            <% end %>
         </div>

         <div class="col s4">
          <div class="card currencyCard">
            <div class="card-content">
              <span class="card-title">Курс валют</span>
              <div class="currencyCard__content">
                  <% @currencyArray.each do |currency| %>
                    <div class="currencyCard__item currencyCard__item-mr">
                      <b class="currencyCard__title flow-text"> <%= currency.title %></b>
                      <span class="currencyCard__value"> <%= currency.value %></span>
                    </div>
                  <% end %>
              </div>
            </div>
          </div>
         </div>
         <div class="col s4">
            <div class="card currencyCard">
            <div class="card-content">
            <span class="card-title">Погода</span>
            <div class="currencyCard__content">
              <% @weatherArray.each do |currency| %>
                <div class="currencyCard__item currencyCard__item-mr">
                  <b class="currencyCard__title flow-text"> <%= currency.title %></b>
                  <span class="currencyCard__value"> <%= currency.value %></span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        </div>
      </div>
</div>

