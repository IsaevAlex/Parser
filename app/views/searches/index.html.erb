<div class="container">
  <div class="row d-flex align-items-center mt-3">
    <div class="col s8">
      <span class="title">Результаты поиска </span>
    </div>
    <div class="col s4">
      <a class="modal-trigger  btn blue darken-1" href="#modal2">Поиск новостей</a>
    </div>
  </div>
  <div class="row">
    <div class="col s8">
      <% @searches.each do |entry| %>

        <div class="card horizontal">
          <div class="card-image">
            <%#= image_tag(entry.imgsrc) %>
          </div>
          <div class="card-stacked">
            <div class="card-content">
              <p class="text"><%= entry.title %></p>
            </div>
            <div class="card-action card-action-flex">
              <div class="card__link">
                <%= link_to "Открыть", entry %>
              </div>
              <div class="card__date ">
                <%= entry.date %>
              </div>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>

